@model TacoCatMVC.Models.Palindrome

    <div class="container">
        <div class="row row-cols-1 row-cols-md-2">
            <div class="col-md-4">
                <h1>Palindrome: A coding Project.</h1>
                <h4 class="lead pb-3">
                    This is a simple project where the user enters
                    a string value and the application checks to see
                    if it is a palindrome
                </h4>
            </div>
            <div class="col-md-8">
                <h5>Enter Values</h5>

                <form class="row" asp-action="Reverse" asp-controller="Home" method="post">
                    <div class="col">
                        <input asp-for="InputWord" type="text" class="form-control" value="@Model.InputWord" aria-label="String Value">
                    </div>
                    <div class="col-12 mt-2 mb-2">
                        <button id="btnSubmit" type="submit" class="btn btn-dark"> Click to Check for Palindrome </button>
                    </div>

                </form>
                <h2 class="mt-3">Palindrome Results</h2>
                <div class="alert alert-success  fade show" id="alert" role="alert">

                    <p id="result">@Model.RevWord</p>
                </div>

            </div>
        </div>

    </div>